<h1>Editing User #<%= @user.id %></h1>


<%= form_tag(user_url(@user), method: 'patch') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @user.name%>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </div>

   <div>
    <%= label_tag :height %><br />
    <%= text_field_tag :height, @user.height %>
  </div>

  <div>
    <%= label_tag :weight %><br />
    <%= text_field_tag :weight, @user.weight %>
  </div>

  <div>
    <%= label_tag :body_type %><br />
    <%= text_field_tag :body_type, @user.body_type %>
  </div>

  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>
